<Page x:Class="BookSwapApp.Views.Profil"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookSwapApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profil"
      Background="White">

    <Grid>
        <!-- Set the background of the page -->
        <Grid.Background>
            <ImageBrush ImageSource="/Views/BookSwap_bg.png" Stretch="Fill" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="RelativeToBoundingBox"/>
        </Grid.Background>

        <!-- Header with welcome message and points on the left -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,0,0">
            <!-- Welcome message -->
            <TextBlock Text="Welcome, User! " FontWeight="Bold" FontSize="18" Foreground="White" Margin="20,10,20,0" />
            <!-- Points -->
            <TextBlock Text="| Points: " FontWeight="Bold" FontSize="18" Foreground="White" Margin="0,10,20,0"/>
        </StackPanel>

        <!-- Profile icon on the right -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,10,20,0">
            <!-- Circular Profile Icon -->
        </StackPanel>

        <!-- Rectangle on the left with the image -->
        <Rectangle HorizontalAlignment="Left" Height="317" Margin="44,93,0,0" Stroke="Black" VerticalAlignment="Top" Width="236" Fill="#FFFDFDFD"/>

        <!-- Insert the uploaded image into the left rectangle -->
        <Image HorizontalAlignment="Left" Height="229" Margin="61,114,0,0" VerticalAlignment="Top" Width="202" Source="/Views/profilekosong.jpg"/>
        <Label x:Name="lblNamaFoto" Content="Edit Foto" HorizontalAlignment="Left" Height="34" Margin="119,321,0,0" VerticalAlignment="Top" Width="86" FontSize="18" FontWeight="Bold"/>
        <Rectangle x:Name="recProfilLengkap" HorizontalAlignment="Left" Height="317" Margin="285,93,0,0" Stroke="Black" VerticalAlignment="Top" Width="476">
            <Rectangle.Fill>
                <SolidColorBrush Color="White" Opacity="0.8"/>
            </Rectangle.Fill>
        </Rectangle>
        <Label x:Name="lblNamaLengkap" Content="Nama Lengkap" HorizontalAlignment="Left" Height="29" Margin="321,96,0,0" VerticalAlignment="Top" Width="112" FontSize="15"/>
        <Label x:Name="lblEmail" Content="Email" HorizontalAlignment="Left" Height="27" Margin="321,160,0,0" VerticalAlignment="Top" Width="98" FontSize="15"/>
        <Label Content="Nomor Telepon" HorizontalAlignment="Left" Margin="321,224,0,0" VerticalAlignment="Top" Width="112" FontSize="15"/>
        <Label x:Name="lblAlamat" Content="Alamat Lengkap" HorizontalAlignment="Left" Margin="321,290,0,0" VerticalAlignment="Top" FontSize="15"/>
        <Rectangle x:Name="recNamaLengkap" HorizontalAlignment="Left" Height="31" Margin="335,128,0,0" Stroke="Black" VerticalAlignment="Top" Width="381" RadiusX="11" UseLayoutRounding="True"/>
        <Rectangle x:Name="recEmail" HorizontalAlignment="Left" Height="30" Margin="337,192,0,0" Stroke="Black" VerticalAlignment="Top" Width="381" RadiusX="11" UseLayoutRounding="True"/>
        <Rectangle x:Name="recNomorTelepon" HorizontalAlignment="Left" Height="31" Margin="339,256,0,0" Stroke="Black" VerticalAlignment="Top" Width="381" RadiusX="11" UseLayoutRounding="True"/>
        <Rectangle x:Name="recAlamatLengkap" HorizontalAlignment="Left" Height="31" Margin="339,324,0,0" Stroke="Black" VerticalAlignment="Top" Width="381" RadiusX="11" UseLayoutRounding="True"/>
        <TextBox x:Name="txtUpdate" HorizontalAlignment="Left" Margin="337,372,0,0" TextWrapping="Wrap" Text="Update" VerticalAlignment="Top" Width="84" Background="#FF235996" Foreground="White" Height="26" FontSize="15" RenderTransformOrigin="0.5,0.5" HorizontalContentAlignment="Center" />
        <Button x:Name="btnHomePage" Content="Home" HorizontalAlignment="Left" Margin="704,20,0,0" VerticalAlignment="Top" Height="38" Width="76" Background="#FF3665AA"  FontWeight="Bold" Foreground="White" Click="btnHomePage_Click">
            <Button.Style>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}" BorderBrush="DarkBlue" BorderThickness="1" CornerRadius="15">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

    </Grid>
</Page>
