<Page x:Class="BookSwapApp.Views.StatusRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BookSwapApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StatusRequest"
      Background="White">

    <Grid Margin="20">
        <!-- Header -->
        <TextBlock Text="Swap Request Status" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <!-- Daftar status permintaan pertukaran -->
        <ListView ItemsSource="{Binding SwapRequests}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Request ID" DisplayMemberBinding="{Binding RequestID}" />
                    <GridViewColumn Header="Requested Book" DisplayMemberBinding="{Binding RequestedBook.Title}" />
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" />
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding RequestDate}" />
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Tombol untuk memperbarui status -->
        <Button Content="Update Status" Command="{Binding UpdateStatusCommand}" Width="150" HorizontalAlignment="Center" Margin="20"/>

    </Grid>
</Page>
